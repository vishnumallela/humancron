{
  "name": "@vishnumallela/humancron",
  "description": "Human readable cron scheduler with timezone and seconds support",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "release": "bun run build && npm version patch && npm publish"
  },
  "devDependencies": {
    "bunup": "latest",
    "typescript": "^5.0.0",
    "husky": "^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vishnumallela/humancron.git"
  }
}
